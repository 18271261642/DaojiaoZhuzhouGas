<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:minHeight="40dip" >
<View
        android:id="@+id/view_0"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginLeft="19dip"
        android:background="#A6A6A6" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="13dip"
        android:layout_alignBottom="@+id/view_0"
        android:src="@mipmap/timeline_green" />
    <View
        android:id="@+id/view_1"
        android:layout_width="1dp"
        android:layout_height="20dip"
        android:layout_below="@+id/image"
        android:layout_marginLeft="19dip"
        android:background="#A6A6A6" />
    
     <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="100dip"
        android:layout_below="@+id/image"
        android:layout_marginLeft="19dip"
        android:background="#A6A6A6" />

    <ImageView
        android:id="@+id/id_treenode_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/view_2"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/view_2"
        android:src="@mipmap/tree_ec" />

    <TextView
        android:id="@+id/id_treenode_label"
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:layout_alignTop="@+id/image"
        android:layout_toRightOf="@+id/image"
        android:text="@string/app_name"
        android:textSize="18dip" />


</RelativeLayout>